<h1>Players</h1>

<%= link_to "New Player", new_player_path %>

<%= will_paginate %>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Team</th>
    <th colspan="3"></th>
  </tr>

  <% @players.each do |player| %>
    <tr class="player">
      <td class="player__name"><%= player.name %></td>
      <td class="player__email"><%= player.email %></td>
      <td class="player__team"><%= player.team %></td>
      <td class="player__action"><%= link_to "Show", player_path(player) %></td>
      <% if current_player.admin? && !current_player?(player) %>
        <td class="player__action"><%= link_to "Edit", edit_player_path(player) %></td>
        <td class="player__action"><%= link_to "Delete", player, method: :delete, data: { confirm: "Are you sure?" } %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= will_paginate %>
