<h1>New Fixture</h1>

<%= form_for :fixture, url: fixtures_path do |f| %>
  <% if @fixture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fixture.errors.count, "error") %> prohibited this fixture from being saved:</h2>
      <ul>
        <% @fixture.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= f.label :home_goals %> <%= f.number_field :home_goals %> - <%= f.number_field :away_goals %> <%= f.label :away_goals %></p>

  <p><%= f.submit %></p>
<% end %>

<%= link_to "Back", fixtures_path %>
