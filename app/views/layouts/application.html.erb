<!DOCTYPE html>
<html>
<head>
  <title>LeagueTable</title>
  <%= stylesheet_link_tag    'app', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="app">
    <header class="app__header">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Players", players_path %></li>
          <li><%= link_to "Profile", current_player %></li>
          <li><%= link_to "Settings", edit_player_path(current_player) %></li>
          <li><%= link_to "Logout", logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Login", login_path %></li>
          <li><%= link_to "Signup", signup_path %></li>
        <% end %>
      </ul>
    </header>

    <% flash.each do |message_type, message| %>
      <aside>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      </aside>
    <% end %>

    <div class="app__page">
      <%= yield %>
    </div>

    <div class="app__footer"></div>
  </div>

  <%= debug(params) if Rails.env.development? %>
</body>
</html>
